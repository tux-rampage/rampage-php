<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns="http://www.linux-rampage.org/ModuleManifest" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.linux-rampage.org/ModuleManifest http://www.linux-rampage.org/ModuleManifest ">
    <classes>
        <namespaces>
            <namespace namespace="rampage.simpleorm" path="." />
        </namespaces>
    </classes>
    
    <servicemanager>
        <services>
            <service name="rampage.simpleorm.EntityDefinition">
                <factory class="rampage.simpleorm.services.EntityDefinitionFactory" />
                <di class="rampage.simpleorm.EntityDefinitionList">
                    <provides class="rampage.simpleorm.EntityDefinitionInterface" />
                </di>
            </service>
            
            <service name="rampage.simpleorm.EntityManager">
                <factory class="rampage.simpleorm.services.EntityManagerFactory" />
                <aliases>
                    <alias name="rampage.EntityManager" />
                    <alias name="EntityManager" />
                </aliases>
            </service>
        </services>
    </servicemanager>
</manifest>
